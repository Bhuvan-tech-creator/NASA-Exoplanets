{
  // VS Code tasks to run the Streamlit UI easily
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Streamlit app",
      "type": "shell",
      "command": "streamlit",
      "args": [
        "run",
        "${workspaceFolder}/streamlit_app.py",
        "--server.port",
        "8501",
        "--server.headless",
        "true"
      ],
      "problemMatcher": []
    }
  ]
}
